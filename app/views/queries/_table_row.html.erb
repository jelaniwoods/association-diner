<tr>
  <td>
    <%= query.level_id %>
  </td>

  <td>
    <%= query.input %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to query, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_query_url(query), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to query, method: :delete, data: { confirm: "Do you really want to delete this query?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
