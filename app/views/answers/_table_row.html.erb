<tr>
  <td>
    <%= answer.query_id %>
  </td>

  <td>
    <%= answer.text %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to answer, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_answer_url(answer), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to answer, method: :delete, data: { confirm: "Do you really want to delete this answer?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
